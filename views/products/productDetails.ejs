<%- include('../partials/head') %>
<%- include('../partials/header') %>

<main class="product-detail">
  <div class="container-fluid">
    <div class="product-detail-wrapper">
      <!-- Imagen del producto -->
      <div class="product-image">
        <img src="<%= product.image %>" alt="<%= product.name %>">
      </div>

      <!-- Información del producto -->
      <div class="product-info">
        <span class="product-category"><%= product.category %></span>
        <h1 class="product-name"><%= product.name %></h1>
        <p class="product-code">Código: 123456</p>
        <p class="product-description">

        </p>

        <div class="product-pricing">
          <span class="product-price-offer">Gs. <%= product.promotional_price %></span>
          <span class="product-price-old">Gs. <%= product.price %></span>
        </div>

        <div class="color-options">
          <p>Colores disponibles:</p>

          <input type="radio" id="<%= product.colors %>" name="color" value="<%= product.colors %>" hidden />
          <label for="<%= product.colors %>" class="color-option">
            <%= product.colors %>
          </label>
        </div>

        <div class="product-quantity">
          <label for="quantity">Cantidad:</label>
          <input type="number" id="quantity" name="quantity" value="1" min="1">
        </div>

        <div class="product-actions">
          <button class="btn-add-cart">Agregar al carrito</button>
          <a href="https://wa.me/595991123456" target="_blank" class="btn-whatsapp">Consultar por WhatsApp</a>
        </div>
      </div>
    </div>
  </div>
</main>


<%- include('../partials/footer') %>