<%- include('../partials/head') %>
<%- include('../partials/header') %>

<main class="product-detail">
  <div class="container-fluid">
    <div class="product-detail-wrapper">
      <!-- Imagen del producto -->
      <div class="product-image">
        <img src="<%= product.image %>" alt="<%= product.name %>">
      </div>

      <!-- Información del producto -->
      <div class="product-info">
        <span class="product-category"><%= product.category?.name || "Sin categoría" %></span>
        <h1 class="product-name"><%= product.name %></h1>
        <p class="product-code">Código: <%= product.productId %></p>
        <p class="product-description">
          <%= product.description %>
        </p>

        <div class="product-pricing">
          <span class="product-price-offer">Gs. <%= product.promotionalPrice %></span>
          <span class="product-price-old">Gs. <%= product.price %></span>
        </div>

        <div class="color-options">
          <p>Colores disponibles:</p>

          <% if (product.color) { %>
          <input type="radio" id="<%= product.color.name %>" name="color" value="<%= product.color.name %>" hidden />
          <label for="<%= product.color.name %>" class="color-option">
            <%= product.color.name %>
          </label>
          <% } else { %>
          <span class="text-muted">Sin color disponible</span>
          <% } %>
        </div>

        <div class="product-quantity">
          <label for="quantity">Cantidad:</label>
          <input type="number" id="quantity" name="quantity" value="1" min="1">
        </div>

        <div class="product-actions">
          <button class="btn-add-cart">Agregar al carrito</button>
          <a href="https://wa.me/595991123456" target="_blank" class="btn-whatsapp">Consultar por WhatsApp</a>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>