<%- include('../partials/head') %>
<%- include('../partials/header') %>

<main>

  <section class="login-container">
    <div class="login-card">
      <div class="login-header">
        <h1 class="login-title">Iniciar Sesión</h1>
        <a href="/users/register" class="login-create">Crear cuenta</a>
      </div>

      <form class="login-form" action="/users/login" method="POST">

        <div>
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" id="email" class="form-input" placeholder="Email" />
        </div>

        <div>
          <label for="password" class="form-label">Contraseña</label>
          <input type="password" name="password" id="password" class="form-input" placeholder="Contraseña" />
        </div>

        <div class="form-remember">
          <input type="checkbox" name="rememberUser" id="rememberUser" />
          <label for="rememberUser">Recordarme</label>
        </div>

        <button type="submit" class="login-btn">Ingresar</button>
      </form>

      <div class="login-links">
        <a href="/" class="login-link">Regresar a Inicio</a>
        <a href="/users/forgot-password" class="login-link">¿Olvidaste tu contraseña?</a>
      </div>
    </div>
  </section>


</main>

<%- include('../partials/footer') %>